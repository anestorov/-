<?xml version="1.0" encoding="utf-8"?>

<Keyboard xmlns:android="http://schemas.android.com/apk/res/android"
    android:keyWidth="25%p"
    android:horizontalGap="0px"
    android:verticalGap="0px"
    android:keyHeight="@dimen/numeric_key_height">

    <Row>
      <Key android:codes="49" android:keyLabel="1" android:keyEdgeFlags="left"/>
      <Key android:codes="50" android:keyLabel="2" />
      <Key android:codes="51" android:keyLabel="3" />
        <Key android:codes="45" android:keyIcon="@drawable/dash_numeric" android:keyEdgeFlags="right"/>
    </Row>

    <Row>
        <Key android:codes="52" android:keyLabel="4" android:keyEdgeFlags="left"/>
        <Key android:codes="53" android:keyLabel="5" />
        <Key android:codes="54" android:keyLabel="6" />
        <Key android:codes="32" android:keyIcon="@drawable/space_button_numeric" android:keyEdgeFlags="right" />
    </Row>

    <Row>
        <Key android:codes="55" android:keyLabel="7" android:keyEdgeFlags="left"/>
        <Key android:codes="56" android:keyLabel="8" />
        <Key android:codes="57" android:keyLabel="9" />
        <Key android:codes="-5" android:keyIcon="@drawable/sym_keyboard_delete" android:keyEdgeFlags="right" android:isRepeatable="true"/>
    </Row>

    <Row>
        <Key android:codes="42" android:keyLabel="*#" android:keyEdgeFlags="left"/>
        <Key android:codes="48,43" android:keyLabel="0 +" />
        <Key android:codes="46" android:keyLabel="." />
        <Key android:codes="-3" android:keyIcon="@drawable/tick_numeric" android:keyEdgeFlags="right"/>
    </Row>



 </Keyboard>